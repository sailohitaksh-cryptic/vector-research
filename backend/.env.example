# VectorResearch Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ======================
# VectorCam API Settings
# ======================
VECTORCAM_API_URL=https://api.vectorcam.org

# Option 1: Use API_SECRET_KEY (Bearer token) - Recommended if you have it
API_SECRET_KEY=your-api-secret-key-here

# Option 2: Use Email/Password (if no API_SECRET_KEY)
# VECTORCAM_API_EMAIL=your-email@example.com
# VECTORCAM_API_PASSWORD=your-password-here

# ======================
# AWS Configuration (Optional - works without it)
# ======================
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# ======================
# Database
# ======================
DATABASE_PATH=./data/vectorinsight.db

# ======================
# Server Configuration
# ======================
PORT=3001
NODE_ENV=development

# ======================
# Logging
# ======================
LOG_LEVEL=info

# ======================
# Cron Schedule
# ======================
# Daily at 2 AM UTC
CRON_SCHEDULE=0 2 * * *

# ======================
# Frontend URL (for CORS)
# ======================
FRONTEND_URL=http://localhost:3000
